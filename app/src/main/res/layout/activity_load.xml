<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoadActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:layout_weight="1"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:id="@+id/leftTopLoad"
            android:background="@color/inactive_button_colour"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:id="@+id/leftMidLoad"
            android:background="@color/inactive_button_colour"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:id="@+id/leftBotLoad"
            android:background="@color/inactive_button_colour"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:id="@+id/rightTopLoad"
            android:background="@color/inactive_button_colour"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:id="@+id/rightMidLoad"
            android:background="@color/inactive_button_colour"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:id="@+id/rightBotLoad"
            android:background="@color/inactive_button_colour"/>

    </LinearLayout>

</LinearLayout>